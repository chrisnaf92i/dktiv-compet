generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(uuid())
  lastname         String
  firstname        String
  email            String     @unique
  phone            String     @unique
  password         String
  directedCompagny Company[]  @relation("DirectorFromCompany")
  directedEvents   Event[]
  employeOfId      String?
  employeOf      Company? @relation("Employee", fields: [employeOfId], references: [id])
  role             Role
}

model Event {
  id           String     @id @default(uuid())
  name         String
  maxUser      String
  compagniesId Company[]
  referent     User[]
}

model Company {
  id          String  @id @default(uuid())
  name        String
  directorId String?
  logoUrl String
  description  String
  director    User?    @relation("DirectorFromCompany", fields: [directorId], references: [id])
  employee    User[]  @relation("Employee")
  events      Event[]
}

enum Role {
  client
  admin
  presta
}
